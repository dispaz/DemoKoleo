<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.searchfragment.SearchFragment">

    <EditText
        android:id="@+id/fromStationEditTxt"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/betweenImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintTop_toBottomOf="@id/fromStationEditTxt"
        app:layout_constraintStart_toStartOf="@id/fromStationEditTxt"
        app:layout_constraintEnd_toEndOf="@id/fromStationEditTxt"/>
    <EditText
        android:id="@+id/toStationEditTxt"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/betweenImage"
        app:layout_constraintStart_toStartOf="@id/fromStationEditTxt"
        app:layout_constraintEnd_toEndOf="@id/fromStationEditTxt"/>

</androidx.constraintlayout.widget.ConstraintLayout>